                navigator.permissions.query({ name: 'geolocation' })
                    .then(console.log)

            };
            navigator.geolocation.getCurrentPosition(successCallback, errorCallback, {
                enableHighAccuracy: true,
                timeout: 5000
            });
        }
        window.addEventListener('load', getLocation);
